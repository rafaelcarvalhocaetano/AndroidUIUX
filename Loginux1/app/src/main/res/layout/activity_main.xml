<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.login.login_ux_1.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:orientation="vertical"
        android:background="@drawable/fundo_login"
        android:gravity="center">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/fundo_photo">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_user"/>

    </LinearLayout>
        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rafael Carvalho"
            android:textSize="25sp"
            android:gravity="center"
            android:textStyle="normal"
            android:fontFamily="sans-serif"
            android:textColor="#e9e5e5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Android"
            android:textStyle="normal"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#e9e5e5"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_margin="30dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="UsuÃ¡rio"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@drawable/fundo_edittext"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_userr"
            android:drawablePadding="10dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Senha"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@drawable/fundo_edittext"
            android:drawableLeft="@drawable/ic_cadeado"
            android:drawablePadding="10dp"

            android:inputType="numberPassword"
            android:layout_marginTop="5dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:hint="LOGIN"
            android:textColorHint="#FFFFFF"
            android:textColor="#FFFFFF"
            android:background="@drawable/fundo_btn"

            android:layout_marginTop="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Developer Android"
            android:textStyle="normal"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:textColor="#262626"/>


    </LinearLayout>


</LinearLayout>
