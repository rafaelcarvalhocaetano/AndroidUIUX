<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="br.com.login.login.MainActivity">


    <ImageView
        android:id="@+id/slider_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/Group_10" />

    <TextView
        android:id="@+id/slider_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="HEADING" />

    <TextView
        android:id="@+id/slider_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/slider_heading"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:padding="35dp"
        android:text="Donec gravida sem non purus molestie eleifend. Nulla at ipsum ante. Maecenas vehicula at nulla nec elementum. Nam dictum molestie ultrices. Nulla id lectus eget mi fringilla blandit. Nunc vel lectus elementum, egestas tortor eu, blandit risus. Quisque efficitur hendrerit massa sit amet consectetur."
        android:textAlignment="center" />

</RelativeLayout>
